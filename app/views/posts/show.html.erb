<div class="ui form">
	<div class="well">
				<table class="table hp-table table-splited">
					<thead>
						<th>Title</th>
						<th>Date Posted</th>
						<th>Content</th>
					</thead>
						<tbody>
								<td><%= @post.title %></td>
								<td><%= @post.date_posted %></td>
								<td><%= @post.content %></td>
								<td></td>
						</tbody>
				</table>
		<div class="ui items">
				<table class="table hp-table table-splited">
					<thead>
					
					<th>Comments</th>
					<th>Date Posted</th>
					</thead>
					<tbody>
					<% @comments.each do |c| %>
					<tr>
						<td><%= c.content %></td>
						<td><%= c.date_posted %></td>
					<% end %>
					</tr>
					
          			
					</tbody>
				</table>
		</div>
	</div>
</div>
<%= link_to 'Comments', post_comments_path(@post) %> |
<%= link_to 'Back', posts_path %>