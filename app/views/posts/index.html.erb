<div class="container">
  <div class="well">
    <div class="ui form">
      <h1 align="center">Posts</h1>
      	<%= link_to "Add New Post", new_post_path, class: "btn btn-info" %>
      	<table class="table hp-table table-splited">
        <thead>
        	<tr>
        		<th>Title</th>
        		<th>Date Posted</th>
        		<th>Content</th>
            <th>Category</th>
            <th>Action</th>
            </tr>
        </thead>

        <tbody>
           	<% @posts.each do |p| %>
        	<tr>
        		<td><%= p.title %></td>
        		<td><%= p.date_posted %></td>
        		<td><%= p.content %></td>
            <td><%= p.try( :category).try (:name) %></td>
            
           <% if (p.user == current_user) %>   
        		<td>

        			<%= link_to "Show", post_path(p.id), class: "btn btn-primary btn-s" %>

        			<%= link_to "Edit", edit_post_path(p.id), class: "btn btn-success btn-s" %>

        			<%= link_to "Delete", post_path(p.id), data: { :confirm => "Are you sure?"}, :method => :delete, class: "btn btn-danger btn-s" %>
        		</td>

            <% else %>
            <td>
              <%= link_to "Show", post_path(p.id), class: "btn btn-primary btn-s" %>
           </td>
            <% end %>
        	</tr>
        	<% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>