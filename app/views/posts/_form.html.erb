<%= simple_form_for @post do |f|%>
	<form>
		<div class="form-group">
			<%= f.association :category, as: :select, collection: Category.where(user_id: current_user) %>
		<div class="form-group">
			<%= f.input :title %>
		</div>
		<div class="form-group">
			<%= f.input :date_posted %>
		</div>
		<div class="form-group">
			<%= f.input :content %>
		</div>
			<button type = "submit" class = "btn btn-success">Save</button>
		</form>
<% end %>