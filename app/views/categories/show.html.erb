<%= @category.name %>

<table class="table table-bordered">
	<thead>
		<tr>
			<th>Title</th>
			<th>Date</th>
			<th>Content</th>
		</tr>
	</thead>
	<tbody>
		<% @posts.each do |p| %>
		<tr>
			<td><%= p.title %></td>
			<td><%= p.date_posted %></td>
			<td><%= p.content %></td>
		</tr>
		<% end %>
	</tbody>
</table>
